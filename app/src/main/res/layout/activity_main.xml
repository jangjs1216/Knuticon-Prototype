        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <TextView
                android:id="@+id/btn_category1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_cafe"
                android:clickable="true"
                android:fontFamily="@font/hanba"
                android:gravity="center"
                android:onClick="category_menu"
                android:tag="clothes"
                android:text="패션의류/잡화"
                android:textColor="@color/white"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/btn_category2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="식품"
                android:tag="foods"
                android:gravity="center"
                android:background="@drawable/button_convin"
                android:textColor="@color/white"
                android:fontFamily="@font/hanba"
                android:textSize="0sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="category_menu"
                />

            <TextView
                android:id="@+id/btn_category3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="digitals"
                android:text="가전디지털"
                android:gravity="center"
                android:background="@drawable/button_fast"
                android:textColor="@color/white"
                android:fontFamily="@font/hanba"
                android:textSize="0sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:onClick="category_menu"
                />

            <TextView
                android:id="@+id/btn_category4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="livings"
                android:text="생활용품"
                android:gravity="center"
                android:background="@drawable/button_gift"
                android:textColor="@color/white"
                android:fontFamily="@font/hanba"
                android:textSize="0sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="category_menu"
                />

            <TextView
                android:id="@+id/btn_category5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="books"
                android:gravity="center"
                android:text="도서/음반/DVD"
                android:background="@drawable/button_movie"
                android:textColor="@color/white"
                android:fontFamily="@font/hanba"
                android:textSize="0sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="category_menu"
                />

            <TextView
                android:id="@+id/btn_category6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="offices"
                android:gravity="center"
                android:text="문구/오피스"
                android:background="@drawable/button_ice"
                android:textColor="@color/white"
                android:fontFamily="@font/hanba"
                android:textSize="0sp"
                android:layout_marginRight ="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="category_menu"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="400sp"
            android:layout_height="230sp"
            android:src="@drawable/main_banner"
            android:layout_marginTop="50sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <include layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>